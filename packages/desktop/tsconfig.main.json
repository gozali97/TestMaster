{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "lib": ["ES2022"],
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/main/**/*", "src/preload/**/*"],
  "exclude": ["node_modules", "dist", "src/renderer/**/*"]
}
